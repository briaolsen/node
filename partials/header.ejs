<!-- HEADER
      only shows Database and Wishlist tabs when logged in
-->
<% if (loginStatus) { %>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" href="/">Home</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav"
    aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav">
      <li class="nav-item">
        <a class="nav-link <% if (page === 'database') { %> active <% } %>" href="/database">Database</a>
      </li>
      <li class="nav-item">
        <a class="nav-link <% if (page === 'wishlist') { %> active <% } %>" href="/wishlist">Wishlist</a>
      </li>

      <button class="btn btn-outline-dark float-right" onclick="logout();">Logout <%=username%></button>

    </ul>
  </div>
</nav>
<% } else { %>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" href="/">Home</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav"
    aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
</nav>

<% } %>

<script>
  // Logs out the current user and reloads home page
  function logout() {
    $.ajax({
      url: "/logout",
      type: "POST",
      complete: function (response) {
        location.replace("/");
      }
    });
  };
</script>